{{> header}}
<body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50 mx-auto" />

      <form id="form-registro" enctype="multipart/form-data">

        <div class="form-group row w-50 m-auto">
          
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input id="input-registro-email" name="email" class="form-control m-auto" required />
          </div>

          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input id="input-registro-nombre" name="nombre" class="form-control m-auto" required />
          </div>

          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input id="input-registro-password" name="password" class="form-control m-auto" required />
          </div>

          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input id="input-registro-repetir-password" name="repetirPassword" class="form-control m-auto" required />
          </div>

          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input id="input-registro-años-experiencia" name="experiencia" class="form-control m-auto" type="number" min="0"  required/>
          </div>

          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input id="input-registro-especialidad" name="especialidad" class="form-control m-auto" required />
          </div>

          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input id="input-registro-foto" name="foto" type="file" accept="image/*"/>
          </div>
        </div>

        <button class="btn btn-info mb-3">Registrarme</button>
        
        <p><a href="/login"> Iniciar sesión</a></p>
      </form>
    </div>
{{> footer}}