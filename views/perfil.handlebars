{{> header}}
<body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50 mx-auto"/>

      <form>
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input id="input-perfil-email"
              class="form-control m-auto"
              disabled
              value="{{skater.email }}" required
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input id="input-perfil-nombre" class="form-control m-auto" value="{{skater.nombre}}" required  />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input id="input-perfil-password"
              type="password"
              class="form-control m-auto"
              value="{{skater.password}}" required 
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input id="input-perfil-repetir-password"
              type="password"
              class="form-control m-auto"
              value="{{skater.password}}" required 
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input id="input-perfil-años-experiencia" class="form-control m-auto" type="number" min="0" value="{{skater.anos_experiencia}}" required  />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input id="input-perfil-especialidad" class="form-control m-auto" value="{{skater.especialidad}}" required  />
          </div>
        </div>
        <div class="mb-1">
          <button id="btn-perfil-actualizar" class="btn btn-primary" data-id="{{skater.id}}">Actualizar</button>
        </div>
        <div>
          <button id="btn-perfil-eliminar" class="btn btn-danger" data-id="{{skater.id}}">Eliminar cuenta</button>
        </div>
      </form>

      <div class="mt-2">
        Revisa si ya esta aprobada tu solicitud en la <a href="/">lista de participantes</a>.
      </div>

    </div>
{{> footer}}